                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/_3"
                android:tag="@string/_3"
                android:onClick="clickedButton"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/plusButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/plus"
                android:tag="@string/plus"
                android:onClick="clickedButton"
                android:textColor="#00C604"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/plusMinus"
                android:tag="@string/plusMinus"
                android:onClick="negButton"
                android:textColor="#FFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/zeroButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/_0"
                android:tag="@string/_0"
                android:onClick="clickedButton"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/decimalButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/decimal"
                android:tag="@string/decimal"
                android:onClick="clickedButton"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/equalButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:background="@drawable/green_selector"
                android:text="@string/equal"
                android:tag="@string/equal"
                android:onClick="equalButton"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/calculatorView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/black"
        android:gravity="end"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/resultsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/black"
        android:gravity="end"
        android:textSize="25sp"
        android:textColor="#6C6C6C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatorView"
        app:layout_constraintBottom_toTopOf="@+id/menuButtonsLayout"
        tools:layout_editor_absoluteY="156dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleY="0.5"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuButtonsLayout"
        app:layout_constraintVertical_bias="0.72" />

    <LinearLayout
        android:id="@+id/menuButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView">


        <Button
            android:id="@+id/historyButton"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_selector"
            android:text="History"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/conversionButton"
            android:layout_width="70dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/black_selector"
            android:drawableLeft="@mipmap/ic_launcher"
            android:text="conversion"
            android:tag="Conversion"
            android:onClick="conversionButton"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/portButton"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_selector"
            android:text="NormalView"
            android:onClick="orientationButton"
            android:tag="Land"
            android:layout_gravity="center"  android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_selector"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView" />


</androidx.constraintlayout.widget.ConstraintLayout>
